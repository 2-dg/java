<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RootController">
   <children>
      <HBox>
         <children>
            <VBox spacing="10.0">
               <children>
                  <HBox>
                     <children>
                        <Label text="성 적 입 력" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Label text="성명:" />
                        <TextField fx:id="txtName" prefWidth="70.0" />
                        <Label text="학년:" />
                        <ComboBox fx:id="cbYear" prefWidth="70.0" promptText="선택" />
                        <Label text="반:" />
                        <TextField fx:id="txtBan" prefWidth="30.0" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Label text="성별 :" />
                        <RadioButton fx:id="rbMale" mnemonicParsing="false" text="남성" userData="남성">
                           <toggleGroup>
                              <ToggleGroup fx:id="genderGroup" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="rbFemale" mnemonicParsing="false" text="여성" toggleGroup="$genderGroup" userData="여성" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Label text="국어 :" />
                        <TextField fx:id="txtKo" prefWidth="70.0" />
                        <Label text="영어 :" />
                        <TextField fx:id="txtEng" prefWidth="70.0" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Label text="수학 :" />
                        <TextField fx:id="txtMath" prefWidth="70.0" />
                        <Label text="과학 :" />
                        <TextField fx:id="txtSic" prefWidth="70.0" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Label text="사회 :" />
                        <TextField fx:id="txtSoc" prefWidth="70.0" />
                        <Label text="음악 :" />
                        <TextField fx:id="txtMusic" prefWidth="70.0" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Label text="_______________________________________" />
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Label text="성 적 출 력" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Label text="총점 :" />
                        <TextField fx:id="txtTotal" prefWidth="70.0" />
                        <Label text="평균 :" />
                        <TextField fx:id="txtAvg" prefWidth="70.0" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <Label text="_______________________________________" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="btnTotal" mnemonicParsing="false" onAction="#handleBtnAvgAction" text="총 점" />
                        <Button fx:id="btnAvg" mnemonicParsing="false" text="평 균" />
                        <Button fx:id="btnInit" mnemonicParsing="false" text="초기화" />
                        <Button fx:id="btnOk" mnemonicParsing="false" text="확 인" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="btnEdit" mnemonicParsing="false" text="수 정" />
                        <Button fx:id="btnDelete" mnemonicParsing="false" text="삭 제" />
                        <Button fx:id="btnExit" mnemonicParsing="false" text="종 료" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox>
               <children>
                  <Label text="성적 테이블" />
                  <HBox spacing="5.0">
                     <padding>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <TextField fx:id="txtSearch" prefWidth="70.0" promptText="이름" />
                        <Button fx:id="btnSearch" mnemonicParsing="false" text="검색" />
                        <Button fx:id="btnBarChart" mnemonicParsing="false" text="바 차트" />
                        <DatePicker fx:id="dpDate" />
                     </children>
                  </HBox>
                  <TableView fx:id="tableView" prefHeight="280.0" prefWidth="520.0" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
